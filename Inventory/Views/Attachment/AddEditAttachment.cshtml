@model Inventory.Models.AttachmentViewModel
@{
    bool isEditMode = Model.AttachmentId != null;
    ViewBag.Title = (isEditMode) ? "Edit " + Model.AttachmentMakeModel : "Add Attachment";
}
<h2 class="index-hd">@Model.AttachmentMakeModel</h2>

<div class="row">
    <div class="col-sm-3 col-xs-5">
        @using (Html.BeginForm((isEditMode) ? "EditAttachment" : "AddAttachment", "Attachment"))
        {
            @Html.HiddenFor(m => m.AttachmentId)
            <div class="form-group">
                @Html.LabelFor(m => m.AttachmentNum)
                @Html.TextBoxFor(m => m.AttachmentNum, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.AttachmentMake)
                @Html.TextBoxFor(m => m.AttachmentMake, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.AttachmentModel)
                @Html.TextBoxFor(m => m.AttachmentModel, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TypeId)
                @Html.DropDownListFor(m => m.TypeId, (SelectList)ViewBag.AttachmentTypes)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Photo)
                @Html.TextAreaFor(m => m.Photo, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Notes)
                @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                <div class="rentcheck">
                    @Html.CheckBoxFor(m => m.Status, new { @class = "form-control" })
                </div>
            </div>

            <button type="submit" class="btn btn-primary">@((isEditMode) ? "Save" : "Add")</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>